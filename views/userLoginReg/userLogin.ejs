<% layout('layout/boilerplate')%>

<div class="card w-50 offset-3 h-75 mb-5">
    <div class="card-body">
        <h5 class="card-title">Login</h5>
        <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username"  autocomplete="new-password" autofocus required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" autocomplete="new-password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
           
            <button class="btn btn-success btn-block" type="submit">Login</button>
        </form>
        <span>
            <a href="/forgot" class="mt-3 d-flex justify-content-end">Forgot password?</a>

        </span>
    </div>

    </div>
  </div> 
               